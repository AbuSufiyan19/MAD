<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/scrollView" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingTop="15dp"
            android:background="@color/white"
            android:id="@+id/topbar">

            <TextView
                android:id="@+id/tracking"
                android:fontFamily="@font/sf_pro_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blue1"
                android:text="Tracking"
                android:textStyle="bold"
                android:textSize="30dp">

            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topbar"
            android:id="@+id/order">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="Order ID: "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderid"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:text="Order Id"
                android:textColor="@color/blue1"
                android:textSize="20sp"
                android:textStyle="bold" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cus"
            android:layout_below="@id/order"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="Customer: "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/sp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="2dp"
                android:text="Name"
                android:textColor="@color/blue1"
                android:textSize="20sp"
                android:textStyle="bold"
                />



            <ImageView
                android:id="@+id/call"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/call"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/spphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textColor="@color/grey2"
                android:hint="Call"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:layout_below="@+id/cus"
            android:layout_marginTop="20dp"
            android:id="@+id/track"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/default_point1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/bg_circle_default"
                    />

                <TextView
                    android:id="@+id/acc_rej"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Service accept/reject"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4.7dp"
                android:orientation="horizontal">


                <ProgressBar
                    android:id="@+id/prg1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="92dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="4dp"
                    android:progress="100"
                    android:progressTint="@color/grey"
                    android:rotation="90"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:id="@+id/datetime1"
                    android:text="-------------"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/default_point2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/bg_circle_default"
                    />

                <TextView
                    android:id="@+id/sp_arrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Will Arrive Soon"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4.7dp"
                android:orientation="horizontal">


                <ProgressBar
                    android:id="@+id/prg2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="92dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="4dp"
                    android:progress="100"
                    android:progressTint="@color/grey"
                    android:rotation="90"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datetime2"
                    android:paddingTop="20dp"
                    android:text="-------------"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/default_point3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/bg_circle_default"
                    />

                <TextView
                    android:id="@+id/work_started"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="To be Started Soon"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />





            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4.7dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/prg3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="92dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="4dp"
                    android:progress="100"
                    android:progressTint="@color/grey"
                    android:rotation="90"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datetime3"
                    android:paddingTop="20dp"
                    android:text="-------------"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/default_point4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/bg_circle_default"
                    />


                <TextView
                    android:id="@+id/work_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Not yet Completed"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4.7dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/prg4"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="92dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="4dp"
                    android:progress="100"
                    android:progressTint="@color/grey"
                    android:rotation="90"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datetime4"
                    android:paddingTop="20dp"
                    android:text="-------------"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/default_point5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/bg_circle_default"
                    />


                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="To be Paid"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="92dp"
                    android:id="@+id/datetime5"
                    android:text="-------------"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonpayment"
                    android:text="Payment Done"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/background_button">

                </Button>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_below="@id/track">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/ratings"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:layout_marginTop="35dp"
                android:layout_marginStart="50dp"
                />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>